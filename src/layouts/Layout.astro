---
import "../styles/main.scss";
interface title {
  title: string;
}
const { title } = Astro.props as title;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon/favicon.svg" />
    <link rel="shortcut icon" href="/favicon/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Eriberto Santos Dev" />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  
    <!-- SEO Básico -->
    <meta name="description" content="Eriberto Santos, desarrollador fullstack con experiencia en aplicaciones para ecoturismo y sistemas de gestión. Portafolio, proyectos y contacto disponibles." />
    <meta name="author" content="Eriberto Santos" />
    <meta name="keywords" content="Eriberto Santos, desarrollador fullstack, aplicaciones web, ecoturismo, Mixteca, Astro, React, Next.js, Node.js, TypeScript" />
  
    <!-- Open Graph (Facebook, LinkedIn, etc) -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Eriberto Santos | Desarrollador fullstack" />
    <meta property="og:description" content="Desarrollador web con experiencia en apps ecoturísticas y soluciones para negocios. Visita mi portafolio para conocer mis proyectos." />
    <meta property="og:image" content="https://eribertosg.dev/im.png" />
    <meta property="og:url" content="https://eribertosg.dev" />
    <meta property="og:site_name" content="Eriberto Santos Dev" />
  
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Eriberto Santos | Desarrollador FullStack" />
    <meta name="twitter:description" content="Explora mi portafolio web y proyectos de desarrollo para ecoturismo y gestión empresarial." />
    <meta name="twitter:image" content="https://eribertosg.dev/im.png" />
    <meta name="twitter:site" content="@TuUsuarioTwitter" />
    <meta name="twitter:creator" content="@TuUsuarioTwitter" />
  
    <!-- Contacto estructurado (opcional para SEO) -->
    <meta name="contact:email" content="eribertosg.dev@gmail.com" />
    <meta name="contact:linkedin" content="https://www.linkedin.com/in/eriberto-santos-g" />
    <meta name="contact:whatsapp" content="https://wa.me/9531596121" />
  </head>
  <body>
    <div class="layout">
      <slot />
    </div>
  </body>
</html>
