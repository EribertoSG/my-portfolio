---
import  '../styles/main.scss'
interface title {
	title: string;
}
const { title } = Astro.props as title;

---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="layout">
			<slot />
		</div>
	</body>
</html>
